{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('build/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('build/login.js') }}"></script>
{% endblock %}

{% block auth_user_content %}
    <div class="container">
        <div class="wrapper">
            <form action="{{ path('user_login') }}" method="post" class="form-signin">

                <h3><img class="dumbbell" width="50" height="50" src="{{ asset('assets/images/alien-profile.png') }}">Вход</h3>

                <hr class="colorgraph" />

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control js-login-field-username" />
                </div>

                <div class="form-group">
                    <label for="password">Пароль:</label>
                    <input type="password" id="password" name="_password" class="form-control" />
                </div>
                <a href="{{ path('user_registration') }}" class="dropdown">Регестрация</a>
                <button type="submit" class="btn btn-success pull-right">Войти<span class="fa fa-lock"></span></button>
            </form>
        </div>
    </div>

{% endblock auth_user_content %}