{% extends 'layout.html.twig' %}


{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('build/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block auth_user_content %}

    <div class="container">
        <div class="wrapper">
            <form name="user" method="post" class="form-signin">
                <div class="form-group">
                    <label for="user_email">Email</label>
                    <input type="email" id="user_email" name="user[email]" class="form-control" required="required" />
                </div>
                <div class="form-group">
                    <label for="user_plainPassword_first">Password</label>
                    <input type="password" id="user_plainPassword_first" class="form-control" name="user[plainPassword][first]" required="required" />
                </div>
                <div class="form-group">
                    <label for="user_plainPassword_second">Repeat Password</label>
                    <input type="password" id="user_plainPassword_second" class="form-control" name="user[plainPassword][second]" required="required" />
                </div>

                <a href="{{ path('user_login') }}" class="dropdown">Вход</a>
                <button type="submit" class="btn btn-success pull-right">Регистрация</button>
            </form>
        </div>
    </div>

{% endblock auth_user_content %}